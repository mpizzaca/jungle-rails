<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <% if product.discounted_price_cents == nil %>
      <%= humanized_money_with_symbol product.price %>
    <% else %>
      <s><%= humanized_money_with_symbol product.price %></s>
      <%= humanized_money_with_symbol product.discounted_price_cents / 100.0 %>
    <% end %>
  </td>
  <td>
    <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= quantity %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' do %> + <% end %>
  </td>
  <td>
    <% if product.discounted_price_cents == nil %>
      <%= humanized_money_with_symbol product.price * quantity %>
    <% else %>
      <%= humanized_money_with_symbol product.discounted_price_cents / 100.0 * quantity %>
    <% end %>
  </td>
</tr>
